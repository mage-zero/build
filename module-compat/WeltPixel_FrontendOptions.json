{
  "description": "WeltPixel Pearl theme: generate LESS/CSS from database config before static content deploy",
  "hooks": {
    "pre_scd": [
      {
        "run": "php -d memory_limit=-1 .mz-build/module-compat/scripts/weltpixel-less-generate.php"
      },
      {
        "run": "php -d memory_limit=-1 .mz-build/module-compat/scripts/weltpixel-css-generate.php ${store_code}",
        "foreach_store": true
      }
    ]
  }
}
